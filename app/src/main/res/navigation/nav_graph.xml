<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.developersbreach.darkthemeandroid.ListFragment"
        android:label="List Fragment"
        tools:layout="@layout/fragment_list" >
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.developersbreach.darkthemeandroid.SearchFragment"
        android:label="Search Fragment"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.developersbreach.darkthemeandroid.SettingsFragment"
        android:label="Settings Fragment"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.developersbreach.darkthemeandroid.DetailFragment"
        android:label="Detail Fragment"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="detailFragmentArgs"
            app:argType="com.developersbreach.darkthemeandroid.Social" />
    </fragment>
</navigation>